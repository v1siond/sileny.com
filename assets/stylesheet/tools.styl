// Media query mixins

mobile()
  @media all and (min-width: 480px)
    {block}

mobile_sm()
  @media all and (min-width: 530px)
    {block}

tablet()
  @media (min-width: 768px)
    {block}

desktop()
  @media (min-width: 1024px)
		{block}


//layout mixins

display_flex()
	display flex
	flex-wrap wrap

horizontal_centered_flex()
	display_flex()
	justify-content center

vertical_centered_flex()
	align-items center
	align-content center
	display_flex()

full_centered_flex()
	align-items center
	align-content center
	display_flex()
	justify-content center

around_flex()
	display_flex()
	justify-content space-around

around_centered_flex()
	vertical_centered_flex()
	justify-content space-around

between_flex()
	display_flex()
	justify-content space-between

between_centered_flex()
	vertical_centered_flex()
	justify-content space-between


// Effect mixins

fast_transition()
	transition all .25s

normal_transition()
	transition all .5s
